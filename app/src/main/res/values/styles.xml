    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- background color of app bar. -->
        <item name="colorPrimary">#00e6e6</item> <!-- Background color of buttons in the app -->
        <item name="colorPrimaryDark">#00e6e6</item>
        <item name="colorAccent">#e6ffff</item>
    </style>

    <style name="colorButton" parent="Base.Widget.AppCompat.Button.Colored">
